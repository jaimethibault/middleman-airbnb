<% surfcamp = data.surfcamps[owner] %>

<div class="container">
  <div class="desc">
    <div class="desc-img">
      <%= image_tag "#{surfcamp.image_path}" %>
    </div>
    <div class="desc-text">
      <h1><%= surfcamp.name %></h1>
      <h3><%= surfcamp.category %></h3>
      <p><%= surfcamp.description %></p>
    </div>
  </div>
</div>

<div class="container-yellow">
  <form class="form-inline text-center">
    <div class="form-group">
      <h1>Book it</h1>
    </div>
    <div class='input-group date' id='datetimepicker'>
      <input type='text' class="form-control" placeholder="Check-in date" />
        <span class="input-group-addon">
          <i class="fa fa-calendar" aria-hidden="true"></i>
        </span>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Nights</label>
      <select class="form-control">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail2">Guests</label>
      <select class="form-control">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
      </select>
    </div>
    <button type="submit" class="btn btn-success">Book</button>
  </form>
</div>

